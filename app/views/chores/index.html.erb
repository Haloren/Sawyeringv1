<%= link_to "Create a New Chore", new_chore_path %>

<% if @chores.size == 0 %>
    <p> No chores have been created </p>
<% else %>
    <% @chores.each do |chore|%>
        <p><%= chore.name %></p>
    <% end %>
<% end %>

<% if @chores.size != 0%>
