<h1> New Chore Form </h1>

<%= form_for(@chore) do |f| %>

    <%= f.text_field :name, placeholder: "Name of Chore"%>
    <br>
    <br>
    <%= f.number_field :points, placeholder: "Points" %>
    <br>
    <br>
    <%= f.text_area :description, placeholder: "Description"%>
    <br>
    <br>
    <%= f.submit "Create Chore"%>
    <h2 style="color: red;"><strong> Can't create a chore without a member_id so form doesn't work </strong></h2>
    <br>
    <br>

<% end %>

<%= link_to 'Back', :back %>

