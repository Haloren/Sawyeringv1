<!DOCTYPE html>
<html>
  <head>
    <title>Swayeringv1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <% if logged_in? %>
      <%= link_to "Home", household_path(@household) %>
    <% end %>

    <%= yield %>

    <br>
    <% if logged_in? %>
      <%= link_to "Logout [#{@household.name}]", logout_path, method: "delete" %>
    <% end %>

  </body>
</html>
