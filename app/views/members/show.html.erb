<h1><%= "#{@member.name} Chore List"%></h1>

<% @chores.each do |chore|%>
    <h3><%= "#{chore.name} - #{chore.points} pts" %></h3>
    <p> <%= "#{chore.description}" %></p>
<% end %>

<hr>
<h2 style="color: red"> Admin: Update/Delete Member</h2>

<div class="flashmessage">
    <%= flash[:message] if flash[:message] %>
</div>

<%= form_for(@member) do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name%>
    <br><br>
    <%= f.label "Points" %>
    <%= f.number_field :points%>
    <br><br>
    <%= f.label "Admin" %>
    <%= f.check_box :admin %>
    <br><br>
    <%= f.submit "Update"%>

<% end %>

<p>Would you like to DELETE this user? <%= button_to "Delete", @chore, :method => :delete %></p>

<br>

<%= link_to "Back", :back%>
<hr>